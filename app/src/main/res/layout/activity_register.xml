<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    tools:context=".Activities.RegisterActivity">

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        android:layout_gravity="center"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">
        <ImageView
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:src="@drawable/logo_transparent_2"
            android:scaleType="center"
            />
        <LinearLayout
            android:layout_marginTop="30dp"
            android:layout_width="300dp"
            android:layout_height="wrap_content">



            <EditText
                android:id="@+id/nameTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:hint="Ad ve Soyad"
                android:paddingStart="10dp"
                android:padding="8dp"
                android:background="@drawable/edittext"
                android:fontFamily="@font/inter_medium"
                android:ems="10"
                android:inputType="textEmailAddress" >


            </EditText>

        </LinearLayout>

        <LinearLayout
            android:layout_marginTop="30dp"
            android:layout_width="300dp"
            android:layout_height="wrap_content">



            <EditText
                android:id="@+id/kayitEmailTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:hint="Eposta adresi"
                android:paddingStart="10dp"
                android:padding="8dp"
                android:background="@drawable/edittext"
                android:fontFamily="@font/inter_medium"
                android:ems="10"
                android:inputType="textEmailAddress" >


            </EditText>

        </LinearLayout>

        <LinearLayout
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            >




            <EditText
                android:id="@+id/kayitParolaTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:hint="Parola"
                android:padding="8dp"
                android:paddingStart="10dp"
                android:background="@drawable/edittext"
                android:fontFamily="@font/inter_medium"
                android:ems="10"
                android:inputType="textPassword" />

        </LinearLayout>
        <LinearLayout
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            >




            <EditText
                android:id="@+id/birimTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:hint="Çalıştığı birim"
                android:padding="8dp"
                android:paddingStart="10dp"
                android:background="@drawable/edittext"
                android:fontFamily="@font/inter_medium"
                android:ems="10"
                android:inputType="text" />

        </LinearLayout>
        <LinearLayout
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:padding="10dp"
                android:text="Yetki Seviyesi"
                android:fontFamily="@font/inter_bold"
                android:textColor="#000000"
                android:textSize="16dp" />



            <Spinner
                android:id="@+id/yetkiDuzeyiSpinner"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:hint="birim"
                android:padding="8dp"
                android:paddingStart="10dp"
                android:fontFamily="@font/inter_medium"
                android:ems="10"
                android:inputType="textPassword" />

        </LinearLayout>




        <LinearLayout
            android:layout_width="300dp"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:orientation="vertical"
            >
            <Button
                android:id="@+id/kaydolBtn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:backgroundTint="@color/black"
                android:layout_gravity="right"
                android:text="Kullanıcı Ekle"
                android:fontFamily="@font/inter_bold"
                app:layout_constraintEnd_toEndOf="@+id/linearLayout"
                app:layout_constraintTop_toBottomOf="@+id/linearLayout"
                tools:ignore="MissingConstraints" />
        </LinearLayout>
    </LinearLayout>

  </LinearLayout>